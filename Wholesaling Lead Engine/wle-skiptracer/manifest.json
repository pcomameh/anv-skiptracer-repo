{
  "manifest_version": 3,
  "name": "WLE Skiptracer",
  "version": "3.0",
  "description": "Automates skiptracing of leads from your Google Sheet and updates contact info.",
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "identity",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.truepeoplesearch.com/*",
    "https://*.fastpeoplesearch.com/*",
    "https://*.whitepages.com/*",
    "https://*.beenverified.com/*",
    "https://script.google.com/macros/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.truepeoplesearch.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}